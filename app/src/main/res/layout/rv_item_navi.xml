<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fragment_navigation_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:layout_width="5dp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toRightOf="@id/fragment_navigation_item_title"
        android:layout_marginStart="9dp"
        app:layout_constraintTop_toTopOf="@id/fragment_navigation_item_title"
        app:layout_constraintBottom_toBottomOf="@id/fragment_navigation_item_title"
        android:background="@color/black"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/rv_item_cp_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_navigation_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>